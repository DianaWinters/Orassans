<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="PlantBase">
    <defName>PlantCatnip</defName>
    <label>catnip plant</label>
    <description>A leafy plant cultivated for its psychological effects. Catnip leaves can be rolled into joints at a crafting spot. Can withstand even the harshest cold weather.</description>
    <statBases>
      <MaxHitPoints>85</MaxHitPoints>
      <Beauty>5</Beauty>
      <Nutrition>0.1</Nutrition>
    </statBases>
	<thingClass>Orassans.FrostPlant</thingClass>
    <graphicData>
      <texPath>Things/Plant/CatnipPlant</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <selectable>true</selectable>
    <pathCost>10</pathCost>
    <plant>
      <dieIfLeafless>false</dieIfLeafless>
      <harvestTag>Standard</harvestTag>
      <harvestedThingDef>CatnipLeaves</harvestedThingDef>
      <harvestFailable>true</harvestFailable>
      <harvestYield>14</harvestYield>
      <sowMinSkill>6</sowMinSkill>
      <sowTags>
        <li>Ground</li>
        <li>Hydroponic</li>
      </sowTags>
      <topWindExposure>0.1</topWindExposure>
      <growDays>8</growDays>
      <fertilitySensitivity>1.0</fertilitySensitivity>
      <visualSizeRange>
        <min>0.3</min>
        <max>1.0</max>
      </visualSizeRange>
    </plant>
  </ThingDef>
  
  <ThingDef ParentName="PlantBase">
    <defName>PlantCateye</defName>
    <label>cat's eye plant</label>
    <description>A bush plant cultivated for its stimulating berries. Cat's eye berries can be brewed into a drink analagous to coffee... except it tastes much better. Can withstand even the harshest cold weather.</description>
    <statBases>
      <MaxHitPoints>85</MaxHitPoints>
      <Beauty>5</Beauty>
      <Nutrition>0.1</Nutrition>
    </statBases>
	<thingClass>Orassans.FrostPlant</thingClass>
    <graphicData>
      <texPath>Things/Plant/CateyePlant</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <selectable>true</selectable>
    <pathCost>10</pathCost>
    <plant>
      <dieIfLeafless>false</dieIfLeafless>
      <harvestTag>Standard</harvestTag>
      <harvestedThingDef>CateyeBerries</harvestedThingDef>
      <harvestFailable>true</harvestFailable>
      <harvestYield>14</harvestYield>
      <sowMinSkill>6</sowMinSkill>
      <sowTags>
        <li>Ground</li>
        <li>Hydroponic</li>
      </sowTags>
      <topWindExposure>0.1</topWindExposure>
      <growDays>5.5</growDays>
      <fertilitySensitivity>1.2</fertilitySensitivity>
      <visualSizeRange>
        <min>0.3</min>
        <max>1.0</max>
      </visualSizeRange>
    </plant>
  </ThingDef>

</Defs>