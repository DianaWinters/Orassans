<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <CultureDef>
    <defName>OrassanCulture</defName>
    <label>orassan</label>
    <description>A broad collection of cultures common among the Orassan Empire.</description>
	<pawnNameMaker>NamerPersonOrassan</pawnNameMaker>
    <ideoNameMaker MayRequire="Ludeon.RimWorld.Ideology">NamerIdeoAstropolitan</ideoNameMaker>
    <deityNameMaker MayRequire="Ludeon.RimWorld.Ideology">NamerDeityAstropolitan</deityNameMaker>
    <deityTypeMaker MayRequire="Ludeon.RimWorld.Ideology">DeityTypeMakerAstropolitan</deityTypeMaker>
    <leaderTitleMaker MayRequire="Ludeon.RimWorld.Ideology">LeaderTitleMaker_Astropolitan</leaderTitleMaker>
    <festivalNameMaker MayRequire="Ludeon.RimWorld.Ideology">NamerFestivalAstropolitan</festivalNameMaker>
    <allowedPlaceTags>
      <li>OriginOrassan</li>
    </allowedPlaceTags>
    <iconPath>World/OrassanBaseIcon</iconPath>
    <iconColor>(0.8, 0.8, 0.8)</iconColor>
	<preferredWeaponClasses>
      <noble>Ultratech</noble>
      <despised>Neolithic</despised>
    </preferredWeaponClasses>
    <thingStyleCategories>
      <li MayRequire="Ludeon.RimWorld.Ideology">
        <category>Techist</category>
        <priority>1</priority>
      </li>
	  <li MayRequire="Ludeon.RimWorld.Ideology">
        <category>Animalist</category>
        <priority>2</priority>
      </li>
    </thingStyleCategories>
    <styleItemTags>
      <li>
        <tag>Urban</tag>
        <baseWeight>1</baseWeight>
        <weightFactor>1</weightFactor>
      </li>
      <li>
        <tag>NoBeard</tag>
        <baseWeight>10</baseWeight>
        <weightFactor>1</weightFactor>
      </li>
      <li>
        <tag>BeardRural</tag>
        <baseWeight>0.1</baseWeight>
        <weightFactor>1</weightFactor>
      </li>
      <li>
        <tag>BeardUrban</tag>
        <baseWeight>0.2</baseWeight>
        <weightFactor>1</weightFactor>
      </li>
      <li>
        <tag>NoTattoo</tag>
        <baseWeight>1</baseWeight>
        <weightFactor>1</weightFactor>
      </li>
    </styleItemTags>
  </CultureDef>
  
    <PlaceDef>
    <defName>OrassanPlace</defName>
    <tags>
      <li>OriginOrassan</li>
    </tags>
    <placeRules>
      <include>
        <li MayRequire="Ludeon.RimWorld.Ideology">PlaceMakerCommon</li>
      </include>
      <rulesStrings>
        <!-- Orassia is the orassan empire's home world. -->
        <li>place_name->Orassia</li>
        <li>place_adjective->Orassan</li>
        <li>place_summary->cascadian planet</li>
        <li>place_community->city</li>
        <li>place_community->archology</li>
        <li>place_job->soldier</li>
        <li>place_job->doctor</li>
        <li>place_job->researcher</li>
        <li>place_job->engineer</li>
        <li>place_job->botanist</li>
        <li>place_personalWeapon->orassan rifle</li>
        <li>place_personalWeapon->orassan sabre</li>
        <li>place_massWeapon->an ICBM</li>
        <li>place_massWeapon->a bio-engineered plague</li>
        <li>place_massWeapon->an army of mercenaries</li>
        <li>place_foeLeader->oligarch</li>
        <li>place_foeSoldiers->mercenaries</li>
      </rulesStrings>
    </placeRules>
  </PlaceDef>
</Defs>
