<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <FactionDef ParentName="FactionBase">
		<defName>Orassan</defName>
		<label>Orassan Enclave</label>
    <description>A small community of Orassans.\n\nThese people have come here to expand the borders of their empire.</description>
	<pawnSingular>orassan</pawnSingular>
    <pawnsPlural>orassans</pawnsPlural>
    <settlementGenerationWeight>1</settlementGenerationWeight>
    <requiredCountAtGameStart>1</requiredCountAtGameStart>
    <canMakeRandomly>true</canMakeRandomly>
    <canSiege>true</canSiege>
    <canStageAttacks>true</canStageAttacks>
    <leaderTitle>Governor</leaderTitle>
		<factionNameMaker>NamerFactionOutlander</factionNameMaker>
		<settlementNameMaker>NamerSettlementOutlander</settlementNameMaker>
		<allowedCultures><li>OrassanCulture</li></allowedCultures>
		<techLevel>Ultra</techLevel>
		<backstoryCategories><li>Orassan</li></backstoryCategories>
		<geneticVariance>0.8</geneticVariance>
		<apparelStuffFilter>
			<thingDefs>
				<li>Synthread</li>
				<li>Hyperweave</li>
				<li>CatLavenderCloth</li>
			</thingDefs>
		</apparelStuffFilter>
    <caravanTraderKinds>
      <li>Caravan_Outlander_BulkGoods</li>
      <li>Caravan_Outlander_CombatSupplier</li>
      <li>Caravan_Outlander_Exotic</li>
    </caravanTraderKinds>
    <visitorTraderKinds>
      <li>Visitor_Orassan_Standard</li>
    </visitorTraderKinds>
    <baseTraderKinds>
      <li>Base_Outlander_Standard</li>
    </baseTraderKinds>
    <allowedArrivalTemperatureRange>-60~35</allowedArrivalTemperatureRange>
	<maxPawnCostPerTotalPointsCurve>
      <points>
        <li>(0,35)</li>
        <li>(70, 50)</li>
        <li>(700, 100)</li>
        <li>(1300, 150)</li>
        <li>(100000, 10000)</li>
      </points>
    </maxPawnCostPerTotalPointsCurve>
    <pawnGroupMakers>
	  <li>
        <kindDef>Combat</kindDef>
        <options>
          <OrassanSoldier>10</OrassanSoldier>
          <OrassanSniper>5</OrassanSniper>
          <OrassanGunner>5</OrassanGunner>
          <OrassanSlasher>5</OrassanSlasher>
	        <OrassanGrenadier>5</OrassanGrenadier>
			<OrassanTownCouncilman>1</OrassanTownCouncilman>
		  <HybridSoldier>3</HybridSoldier>
		  <HumanSoldier>3</HumanSoldier>
        </options>
      </li>
	  <li>
      <kindDef>Peaceful</kindDef>
        <options>
          <OrassanVillager>20</OrassanVillager>
		  <HumanVillager>5</HumanVillager>
		  <HybridVillager>5</HybridVillager>
          <OrassanTownGuard>10</OrassanTownGuard>
          <OrassanTownCouncilman>5</OrassanTownCouncilman>
		  <HybridSoldier>3</HybridSoldier>
		  <HumanSoldier>3</HumanSoldier>
        </options>
      </li>
	  <li>
      <kindDef>Trader</kindDef>
        <traders>
          <OrassanTrader>1</OrassanTrader>
        </traders>
        <carriers>
          <Muffalo>1</Muffalo>
          <Dromedary>1</Dromedary>
        </carriers>
        <guards>
          <OrassanTownGuard>10</OrassanTownGuard>
          <OrassanSniper>1</OrassanSniper>
          <OrassanGunner>1</OrassanGunner>
          <OrassanSlasher>1</OrassanSlasher>
		  <HybridSoldier>3</HybridSoldier>
		  <HumanSoldier>3</HumanSoldier>
	        <OrassanGrenadier>1</OrassanGrenadier>
        </guards>
      </li>
	  <li>
        <kindDef>Settlement</kindDef>
        <options>
          <OrassanVillager>5</OrassanVillager>
		  <HybridVillager>1</HybridVillager>
		  <HumanVillager>1</HumanVillager>
          <OrassanTownGuard>10</OrassanTownGuard>
          <OrassanTownCouncilman>1</OrassanTownCouncilman>
          <OrassanSoldier>10</OrassanSoldier>
		  <HybridSoldier>3</HybridSoldier>
		  <HumanSoldier>3</HumanSoldier>
          <OrassanSniper>10</OrassanSniper>
          <OrassanGunner>10</OrassanGunner>
          <OrassanSlasher>1</OrassanSlasher>
	      <OrassanGrenadier>1</OrassanGrenadier>
        </options>
      </li>
    </pawnGroupMakers>
    <settlementTexturePath>World/OrassanBaseIcon</settlementTexturePath>
    <factionIconPath>World/OrassanBaseIcon</factionIconPath>
	<maxConfigurableAtWorldCreation>1</maxConfigurableAtWorldCreation>
    <configurationListOrderPriority>30</configurationListOrderPriority>
  </FactionDef>

</Defs>